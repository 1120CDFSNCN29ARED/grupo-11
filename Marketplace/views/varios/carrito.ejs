<%- include('head') %>
<body>
	<%- include('header') %>
	<main>
		<section id="carrito">
			<div id="encabezado">
				<!--ENCABEZADO-->
				<div id="título">
					<i class="fas fa-shopping-basket"></i>
					<h1>Carrito de Compras</h1>
				</div>
				<div>
					<!--IMPORTE TOTAL Y PAGAR-->
					<div id="total">
						<h2>Importe a pagar:</h2>
						<h2>$ 3.000.000</h2>
					</div>
					<div id="continuar-y-pagar">
						<!--CONTINUAR Y PAGAR-->
						<button>Continuar con la compra</button>
						<button>Pagar</button>
					</div>
				</div>

			</div>
			<div class="productos">
				<img src="/images/products/fender-stratocaster.jpg" alt="fender stratocaster" class="imagen-de-producto">
				<p class="nombre-de-producto">Fender Stratocaster</p>
				<div id="cantidad-y-flechas">
					<!--CANTIDAD-->
					<p id="cantidad">21</p>
					<div id="flechas">
						<i class="fas fa-arrow-alt-circle-up"></i>
						<i class="fas fa-arrow-alt-circle-down"></i>
					</div>
				</div>
				<div class="valor">
					<!--PRECIO UNITARIO-->
					<p class="título">$/un.</p>
					<p class="valor">$ 100.000</p>
				</div>
				<div class="valor">
					<!--PRECIO TOTAL-->
					<p class="título">Precio Total</p>
					<p class="valor">$ 2.100.000</p>
				</div>
				<div>
					<!--TRASH-->
					<i class="fas fa-trash-alt"></i>
				</div>
			</div>
			<div class="productos">
				<img src="/images/products/taylor-210ce-plus.jpg" alt="taylor-210ce-plus" class="imagen-de-producto">
				<p class="nombre-de-producto">Taylor 210ce plus</p>
				<div id="cantidad-y-flechas">
					<!--CANTIDAD-->
					<p id="cantidad">10</p>
					<div id="flechas">
						<i class="fas fa-arrow-alt-circle-up"></i>
						<i class="fas fa-arrow-alt-circle-down"></i>
					</div>
				</div>
				<div class="valor">
					<!--PRECIO UNITARIO-->
					<p class="título">$/un.</p>
					<p class="valor">$ 90.000</p>
				</div>
				<div class="valor">
					<!--PRECIO TOTAL-->
					<p class="título">Precio Total</p>
					<p class="valor">$ 900.000</p>
				</div>
				<div>
					<!--TRASH-->
					<i class="fas fa-trash-alt"></i>
				</div>

			</div>
		</section>
	</main>
	<%- include('footer') %>
</body>

</html>