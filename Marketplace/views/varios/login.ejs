<%- include('head') %>
<body>
    <%- include('header') %>
    <main>
        <form action="/" method="GET">
            <div><!--Dirección de mail-->
                <input type="email" name="e-mail" placeholder="Dirección de mail" required>
            </div>
            <div><!--Contraseña-->
                <input type="password" name="password" placeholder="Contraseña" required>
            </div>
            <div id="button"><!--'Buttons Olvidó su contraseña' y 'Registrarse'-->
                <a href="#">
                    <button type="button">¿Olvidó su contraseña?</button>
                </a>
                <a href="/usuario/crear" id="registrarse">
                    <button type="button">Registrarse</button>
                </a>
            </div>
            <div id="button">
                <!--Buttons Enviar y Borrar-->
                <button type="submit">Enviar</button>
                <button type="reset">Borrar</button>
            </div>
            <div id="google-facebook">
                <img src="/images/Google.png" alt="Google">
                <img src="/images/facebook-icon.svg" alt="Facebook">
            </div>
        </form>
    </main>
    <%- include('footer') %>
</body>

</html>