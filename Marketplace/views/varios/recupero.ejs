<%- include('head') %>
<body>
	<%- include('header') %>
	<main>
		<form action="/usuario/recupero" method="POST" class="formulario">
			<div>
				<% if(typeof errores != 'undefined'){ %>
					<p style="color: red">ERROR</p>
					<ul>
						<% for(let i = 0; i < errores.length; i++){ %>
							<li><%=errores[i].msg%></li>  
						<%}%>
					</ul>
				<%}%>
			</div>
            <h3 class="titulo">Recuperar Contraseña</h3>            
			<div class="grupo_email"><!--Dirección de mail-->
				<div class="formulario__grupo-input">
				     <input type="text" class="formulario__input email" name="email" placeholder="Dirección de mail"
				      value="<%= locals.oldData && oldData.email ? oldData.email : '' %>">
			    </div>
			</div>
			<div id="button">
				<!--Buttons Enviar-->
				<button type="submit">Enviar</button>
	        </div>
		</form>
	</main>
	<%- include('footer') %>
</body>
</html>