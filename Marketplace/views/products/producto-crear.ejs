<%- include('head') %>
<body>
    <%- include('header') %>
    <main>
        <form action="/producto/crear" method="POST" enctype="multipart/form-data">
            <h1>CREAR PRODUCTO</h1>
            <div>
                <div class="box">
                    <label for="nombre">Nombre del Producto</label>
                    <input type="text" id="nombre" name="nombre" placeholder="Ej: Fender Telecaster" class="form-input" required>
                </div>
                <div class="box">
                    <label for="categoria" class="form-label">Categoría</label>
                    <select name="categoria" id="category" class="form-input">
                        <% for (let n of categoriasDeProductos) { %>
                        <option value="<%= n.nombre %>"><%= n.nombre %></option>
                        <% } %>
                    </select>
                </div>
                <div class="box" >
                    <label for="precio">Precio</label>
                    <input type="number" id="precio" name="precio" placeholder="Ej: 5678" class="form-input" required>
                </div>
                <div class="box" >
                    <label for="descripcion">Descripción</label>
                    <textarea name="descripcion" id="descripcion" class="form-input" required></textarea>
                </div>
                <div class="box">
                    <label for="image">Imagen</label>
                    <input type="file" id="imagen" name="imagen" placeholder="file" class="form-input" required>
                </div>
                <div class="box">
                    <button class="button" type="submit">Guardar Producto</button>
                </div>
            </div>
        </form>
    </main>
    <%- include('footer') %>
</body>

</html>