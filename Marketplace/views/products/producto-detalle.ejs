<%- include('head') %>
<body>
	<%- include('header') %>
	<main>
		<div class="contenedor-padre">
			<div class="producto">
				<h2><%= producto.nombre %></h2>
			</div>
			<div class="img">
			</div>
			<div class="img">
				<article class="flex-row">
					<img src="/images/products/<%= producto.imagenes[0].ruta %>" width="100%" alt="<%= producto.nombre %>">
				</article>
			</div>
			<div class="descripcion-contenedor">
				<article class="descripcion">
					<div class="caracteristica">
						<h4>Descripción</h4>
					</div>
					<div class="detalle">
						<p>Categoría: <%= producto.categoria.nombre %></p>
						<p>Modelo: <%= producto.modelo.nombre %></p>
						<p>Marca: <%= producto.marca.nombre %></p>
						<p><%= producto.descripcion %></p>
					</div>
					<div class="precio">
						<p>$ <%= toThousand(producto.precio) %></p>
					</div>
					<div class="flex-container">
						<a href="/producto/<%= producto.id %>/editar">
							<button id="modificar" type="text">Modificar</button>
						</a>
						<form  action="/producto/<%= producto.id %>/eliminar?_method=DELETE" method="POST">
							<button id="eliminar" type="submit">Eliminar</button>
						</form>
					</div>
					<div>
						<a href="/carrito/agregar/2/<%= producto.id %>">
							<button id="carrito" type="text">Agregar al Carrito</button>
						</a>
					</div>
					<div>
						<% if (locals.usuarioLogeado && locals.usuarioLogeado.rol_id == 1) { %>							<a href="/api/ventas-por-producto/<%= producto.id %>">
								<button id="carrito" type="text">Historial de Venta</button>
						<% } %>
					</div>
				</article>
			</div>
		</div>            
	</main>
	<%- include('footer') %>
</body>

</html>