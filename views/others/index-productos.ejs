<section class="products-group">
    <div class="section-header flex-container">
        <p class="section-title"><%= titulo %> </p>
        <p class="view-more">Ver todos</p>
    </div>
    <div class="section-products flex-container">
        <% 
        let campo=false;
        for (const instrumento of productos) {;
            if (titulo == "MÃ¡s vendidos") {campo = instrumento.masVendido};
            if (titulo == "Novedades") {campo = instrumento.novedades};
            if (campo) { %>
                <article class="product">
                    <div>
                        <a href="/producto/<%= instrumento.vinculo %>">
                            <img src="/images/products/<%= instrumento.imagen %>" alt="<%= instrumento.nombre %>" class="product-image">
                        </a>
                        <i class="fas fa-shopping-basket"></i>
                    </div>
                    <div class="product-information">
                        <p class="product-description"><%= instrumento.nombre %></p>
                        <p class="product-price">$ <%= toThousand(instrumento.precio) %></p>
                    </div>
                </article>
            <% } %>
        <% } %> 
    </div>
</section>
