<%- include('./partials/preHead') %>
<head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/registro.css">
    <title>Guitar Shop</title>
</head>

<body>
    <%- include('./partials/header') %>
    <main>
        <form action="/" method="GET">
            <h1>Crear Cuenta</h1>
            <div class="box">
                <div class="titulo"><label for="nombre">Nombre</label></div>
                <input class="input" type="text" name="nombre" id="nombre" required>
            </div>
            <div class="box">
                <div class="titulo"><label for="user">Apellido</label></div>
                <input class="input" type="text" name="user" id="user" required>
            </div>
            <div class="box">
                <div class="titulo"><label for="email">Email</label></div>
                <input class="input" type="email" name="email" id="email" required>
            </div>
            <div class="box">
                <div class="titulo"><label for="password">Contraseña</label></div>
                <input class="input" type="password" name="password" id="password" required>
            </div>
            <div class="box">
                <div class="titulo"><label for="repeat-password">Repetir contraseña</label></div>
                <input class="input" type="password" name="repeat-password" id="repeat-password" required>
            </div>
            <div class="box">
                <button class="button" type="submit">Registrarse</button>
            </div>
            <div class="contenedor-redes">
                <a href="https://www.facebook.com/">
                    <button class="redes-sociales">
                        <i class="fab fa-facebook-square"></i>
                    </button>
                </a>
                <a href="https://accounts.google.com/">
                    <button class="redes-sociales">
                        <i class="fab fa-google"></i>
                    </button>
                </a>
            </div>
        </form>
    </main>
    <%- include('./partials/footer') %>
</body>

</html>